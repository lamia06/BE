                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/r"
                android:text="Adresse:"
                android:layout_marginLeft="8dp"
                android:textSize="15dp" />
            </LinearLayout>

            <Button
